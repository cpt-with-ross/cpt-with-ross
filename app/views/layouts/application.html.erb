<!DOCTYPE html>
<html>
  <head>
    <title>CPT with Ross</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', 'data-turbo-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="vh-100 overflow-hidden bg-white">

    <div class="container-fluid h-100">
      <div class="row h-100">

        <div class="col-2 h-100 p-0">
          <%= render 'shared/sidebar' %>
        </div>

        <div class="col-6 h-100 p-0 d-flex flex-column bg-light">

          <div class="px-3 border-bottom bg-light d-flex align-items-center" style="height: 65px;">
            <%= yield :header %>
          </div>

          <div class="flex-grow-1 overflow-y-auto">
            <%= render 'shared/flashes' %>
            <%= yield %>
          </div>

        </div>

        <div class="col-4 h-100 p-0">
          <%= render 'shared/chat' %>
        </div>

      </div>
    </div>

  </body>
</html>
