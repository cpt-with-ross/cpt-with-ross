<%= tag.div id: dom_id(abc_worksheet) do %>
  <div class="card shadow-sm">
    <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center py-2">
      <h5 class="mb-0">ABC Worksheet</h5>
      <div class="d-flex gap-2">
        <%= link_to pdf_abc_worksheet_path(abc_worksheet),
            class: "btn btn-sm btn-light",
            target: "_blank",
            title: "Download PDF" do %>
          <i class="fas fa-download"></i> Download PDF
        <% end %>
        <%= link_to edit_abc_worksheet_path(abc_worksheet),
            class: "btn btn-sm btn-light",
            data: { turbo_frame: "main_content" } do %>
          <i class="fas fa-edit"></i> Edit
        <% end %>
      </div>
    </div>
    <div class="card-body p-0">
      <%# Header row - Bootstrap flexbox ensures equal heights on xl screens %>
      <div class="row g-0 d-none d-xl-flex border-bottom bg-light">
        <div class="col-xl-4 border-end text-center py-2">
          <%= render "abc_worksheets/column_header", letter: "A", title: "Activating event", description: "Something happens" %>
        </div>
        <div class="col-xl-4 border-end text-center py-2">
          <%= render "abc_worksheets/column_header", letter: "B", title: "Belief/stuck point", description: "I tell myself something" %>
        </div>
        <div class="col-xl-4 text-center py-2">
          <%= render "abc_worksheets/column_header", letter: "C", title: "Consequence", description: "I feel something" %>
        </div>
      </div>

      <div class="row g-0">
        <div class="col-xl-4 border-end">
          <div class="d-xl-none text-center border-bottom py-2 bg-light">
            <%= render "abc_worksheets/column_header", letter: "A", title: "Activating event", description: "Something happens" %>
          </div>
          <div class="p-3">
            <% if abc_worksheet.activating_event.present? %>
              <%= simple_format(abc_worksheet.activating_event, class: "mb-0") %>
            <% else %>
              <p class="text-muted fst-italic mb-0">Not yet written.</p>
            <% end %>
          </div>
        </div>

        <div class="col-xl-4 border-end">
          <div class="d-xl-none text-center border-bottom py-2 bg-light">
            <%= render "abc_worksheets/column_header", letter: "B", title: "Belief/stuck point", description: "I tell myself something" %>
          </div>
          <div class="p-3">
            <% if abc_worksheet.beliefs.present? %>
              <%= simple_format(abc_worksheet.beliefs, class: "mb-0") %>
            <% else %>
              <p class="text-muted fst-italic mb-0">Not yet written.</p>
            <% end %>
          </div>
        </div>

        <div class="col-xl-4">
          <div class="d-xl-none text-center border-bottom py-2 bg-light">
            <%= render "abc_worksheets/column_header", letter: "C", title: "Consequence", description: "I feel something" %>
          </div>
          <div class="p-3">
            <% if abc_worksheet.emotions.present? && abc_worksheet.emotions.any? %>
              <% abc_worksheet.emotions.sort_by { |e| -e['intensity'] }.each do |emotion_data| %>
                <div class="d-flex align-items-center gap-2 mb-2">
                  <span class="flex-grow-1"><%= emotion_data['emotion'].capitalize %></span>
                  <div class="progress flex-grow-1" style="height: 8px; min-width: 80px;">
                    <div class="progress-bar" role="progressbar"
                         style="width: <%= emotion_data['intensity'] * 10 %>%"
                         aria-valuenow="<%= emotion_data['intensity'] %>"
                         aria-valuemin="0" aria-valuemax="10"></div>
                  </div>
                  <span class="badge bg-secondary" style="min-width: 24px;"><%= emotion_data['intensity'] %></span>
                </div>
              <% end %>
            <% else %>
              <p class="text-muted fst-italic mb-0">No emotions recorded.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <p class="text-muted text-end small mt-3">
    Last updated: <time datetime="<%= abc_worksheet.updated_at.iso8601 %>" data-controller="local-time"><%= abc_worksheet.updated_at.strftime("%B %d, %Y at %l:%M %p") %></time>
  </p>
<% end %>
