<%= turbo_frame_tag "main_content", data: { controller: "frame-tracker", frame_tracker_initial_path_value: edit_abc_worksheet_path(@abc_worksheet) } do %>
  <%= render "shared/page_header",
      parents: [@stuck_point.index_event.title, @stuck_point.statement.truncate(30), "ABC Worksheets"],
      title: "Edit #{@abc_worksheet.title}" %>

  <div class="card p-4 shadow-sm">
    <%= simple_form_for @abc_worksheet, data: { turbo_frame: "main_content" } do |f| %>
      <div class="mb-4">
        <%= f.input :activating_event,
            as: :text,
            label: "A - Activating Event",
            input_html: { rows: 4, class: "form-control" },
            hint: "Describe the situation or event that triggered your thoughts and feelings." %>
      </div>

      <div class="mb-4">
        <%= f.input :beliefs,
            as: :text,
            label: "B - Beliefs",
            input_html: { rows: 4, class: "form-control" },
            hint: "What thoughts or beliefs came up during this event?" %>
      </div>

      <div class="mb-4">
        <%= f.input :consequences,
            as: :text,
            label: "C - Consequences",
            input_html: { rows: 4, class: "form-control" },
            hint: "What emotions and behaviors resulted from these beliefs?" %>
      </div>

      <div class="d-flex gap-2">
        <%= f.button :submit, "Save", class: "btn btn-primary" %>
        <%= link_to "Cancel", @abc_worksheet, class: "btn btn-outline-secondary", data: { turbo_frame: "main_content" } %>
      </div>
    <% end %>
  </div>
<% end %>
