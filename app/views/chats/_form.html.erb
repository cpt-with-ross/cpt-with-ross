<%= simple_form_for chat, url: chats_path do |f| %>
  <%= f.input :model,
      as: :select,
      label: "Select AI model:",
      collection: Model.pluck(:name, :model_id).unshift(["Default (#{RubyLLM.config.default_model})", nil]),
      selected: @selected_model,
      input_html: { style: "width: 100%; max-width: 600px; padding: 5px;" } %>

  <%= f.input :prompt,
      as: :string,
      label: false,
      wrapper_html: { style: "margin-top: 15px;" },
      input_html: { style: "width: 100%; max-width: 600px;", placeholder: "What would you like to discuss?", autofocus: true } %>

  <%= f.button :submit, "Start new chat" %>
<% end %>
