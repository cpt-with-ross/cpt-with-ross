<h1>Write Your Impact Statement</h1>

<%= simple_form_for([@trauma, @impact_statement]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content, as: :text, label: "Impact Statement", input_html: { rows: 10 } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save Impact Statement" %>
    <p>The Impact Statement can be edited later</p>
  </div>
<% end %>
