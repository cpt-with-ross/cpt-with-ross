<div class="container mt-4 bg-white shadow p-4">
  <p style="color: green"><%= notice %></p>

  <h1>Stuck points</h1>

  <div id="stuck_points">
    <% @stuck_points.each do |stuck_point| %>
      <%= render stuck_point %>
      <p>
        <%= link_to "Edit", edit_trauma_stuck_point_path(@trauma, stuck_point) %> |
        <%= button_to "Delete", trauma_stuck_point_path(@trauma, stuck_point), method: :delete, data: { confirm: "Are you sure?" } %>
      </p>
    <% end %>
  </div>

  <%= link_to "New stuck point", new_trauma_stuck_point_path(@trauma) %>
</div>
