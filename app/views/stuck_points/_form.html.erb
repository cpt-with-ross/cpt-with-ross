
<%= simple_form_for([@trauma, @stuck_point]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :belief %>
    <%= f.input :belief_type, collection: ['Safety', 'Trust', 'Power and control', 'Esteem', 'Intimacy'], prompt: "Select an option" %>
    <%= f.input :resolved %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
