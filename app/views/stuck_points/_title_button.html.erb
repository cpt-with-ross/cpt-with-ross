<%= turbo_frame_tag dom_id(stuck_point, :title_frame) do %>
  <div class="d-flex align-items-center w-100 p-1 ps-0 collapsed"
       data-controller="sidebar-toggle"
       data-sidebar-toggle-collapse-id-value="collapse_stuck_<%= stuck_point.id %>">
    <i class="fa-solid fa-chevron-down me-2 text-muted chevron-icon"
       style="font-size: 0.6rem; cursor: pointer;"
       role="button"
       data-action="click->sidebar-toggle#toggleDrawer"></i>
    <span class="text-muted small flex-grow-1"
          role="button"
          data-action="click->sidebar-toggle#toggle"
          style="cursor: pointer;">
      <%= stuck_point.statement %>
    </span>
  </div>
<% end %>
