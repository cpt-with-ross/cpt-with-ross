<div class="mb-3">
  <div class="d-flex justify-content-between align-items-center mb-1 sidebar-item-group">
    <small class="text-uppercase fw-bold text-muted" style="font-size: 0.65rem; letter-spacing: 0.5px;">
      <%= title %>
    </small>

    <div class="dropdown">
      <button class="btn btn-sm btn-link text-muted p-0 action-btn" type="button" data-bs-toggle="dropdown" style="font-size: 0.8rem;">
        <i class="fa-solid fa-ellipsis"></i>
      </button>
      <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0">
        <li>
          <%= link_to new_path,
              class: "dropdown-item small",
              data: { turbo_frame: frame_id } do %>
            <i class="fa-solid fa-plus me-2"></i> Create New
          <% end %>
        </li>
      </ul>
    </div>
  </div>

  <%= turbo_frame_tag frame_id %>

  <div id="<%= list_id %>">
    <% collection.each do |item| %>
      <%= render "shared/file_sidebar_item", item: item %>
    <% end %>
  </div>
</div>
