<div class="mb-3">
  <div class="d-flex justify-content-between align-items-center mb-1 pe-2 sidebar-item-group">
    <small class="text-uppercase fw-bold text-muted" style="font-size: 0.65rem; letter-spacing: 0.5px;">
      <%= title %>
    </small>

    <%= link_to new_path,
        class: "btn btn-sm btn-link text-muted p-0 action-btn",
        style: "font-size: 0.8rem;",
        title: "Add New #{title.singularize}",
        data: { turbo_frame: frame_id } do %>
      <i class="fa-solid fa-plus"></i>
    <% end %>
  </div>

  <%= turbo_frame_tag frame_id %>

  <div id="<%= list_id %>">
    <% collection.each do |item| %>
      <%= render "shared/file_sidebar_item", item: item %>
    <% end %>
  </div>
</div>
