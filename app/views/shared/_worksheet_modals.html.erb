<div data-controller="worksheet-actions">
  <!-- Print Modal -->
  <div class="modal fade" id="printModal" tabindex="-1" aria-labelledby="printModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="printModalLabel">Print Worksheet</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <label for="printWorksheetSelect" class="form-label">Please choose the worksheet you want to print:</label>
          <select
            class="form-select"
            id="printWorksheetSelect"
            data-worksheet-actions-target="printSelect"
          >
            <option value="">-- Select a worksheet --</option>
            <% all_user_worksheets.each do |worksheet| %>
              <option
                value="<%= worksheet[:path] %>/pdf"
                data-type="<%= worksheet[:type] %>"
              >
                <%= worksheet[:label] %>
              </option>
            <% end %>
          </select>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button
            type="button"
            class="btn btn-primary"
            data-action="click->worksheet-actions#print"
          >
            Print
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Download Modal -->
  <div class="modal fade" id="downloadModal" tabindex="-1" aria-labelledby="downloadModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="downloadModalLabel">Download Worksheet</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <label for="downloadWorksheetSelect" class="form-label">Please choose the worksheet you want to download:</label>
          <select
            class="form-select"
            id="downloadWorksheetSelect"
            data-worksheet-actions-target="downloadSelect"
          >
            <option value="">-- Select a worksheet --</option>
            <% all_user_worksheets.each do |worksheet| %>
              <option
                value="<%= worksheet[:path] %>/pdf"
                data-type="<%= worksheet[:type] %>"
              >
                <%= worksheet[:label] %>
              </option>
            <% end %>
          </select>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button
            type="button"
            class="btn btn-primary"
            data-action="click->worksheet-actions#download"
          >
            Download
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Email Modal -->
  <div class="modal fade" id="emailModal" tabindex="-1" aria-labelledby="emailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="emailModalLabel">Email Worksheet</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <label for="emailWorksheetSelect" class="form-label">Please choose the worksheet you want to email:</label>
          <select
            class="form-select"
            id="emailWorksheetSelect"
            data-worksheet-actions-target="emailSelect"
          >
            <option value="">-- Select a worksheet --</option>
            <% all_user_worksheets.each do |worksheet| %>
              <option
                value="<%= worksheet[:path] %>/email"
                data-type="<%= worksheet[:type] %>"
              >
                <%= worksheet[:label] %>
              </option>
            <% end %>
          </select>
          <div class="mt-3 text-muted small">
            <i class="fa-solid fa-info-circle me-1"></i>
            The PDF will be sent to: <strong><%= current_user&.email %></strong>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button
            type="button"
            class="btn btn-primary"
            data-action="click->worksheet-actions#email"
          >
            Send to your email
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
