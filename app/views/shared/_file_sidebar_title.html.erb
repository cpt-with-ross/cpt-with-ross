<% is_active = local_assigns.key?(:is_active) ? local_assigns[:is_active] : current_page?(polymorphic_path(item)) %>

<%= turbo_frame_tag dom_id(item, :title_frame), class: "flex-grow-1" do %>
  <%= link_to item.title, polymorphic_path(item),
      class: "sidebar-nav-text text-primary text-decoration-none small d-block py-1 #{is_active ? 'sidebar-active fw-bold' : ''}",
      data: { turbo_frame: "main_content", sidebar_item_path: polymorphic_path(item) } %>
<% end %>
