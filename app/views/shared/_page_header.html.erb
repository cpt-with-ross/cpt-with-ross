<div class="border-bottom bg-light sticky-top px-3 d-flex align-items-center justify-content-between" style="min-height: 65px;">
  <h5 class="fw-bold m-0">
    <% Array(local_assigns[:parents]).each do |p| %>
      <span class="text-muted"><%= p %></span>
      <span class="text-muted mx-2">&gt;</span>
    <% end %>

    <span class="text-dark"><%= title %></span>
  </h5>

  <% if local_assigns[:show_close] != false %>
    <%= link_to root_path, class: "btn btn-sm btn-link text-muted", data: { turbo_frame: "main_content" }, title: "Close Worksheet" do %>
      <i class="fa-solid fa-xmark fa-lg"></i>
    <% end %>
  <% end %>
</div>
